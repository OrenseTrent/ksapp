<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/depositBTN"
                android:layout_marginStart="@dimen/dimen_20"
                android:elevation="3dp"
                android:layout_marginEnd="@dimen/dimen_20"
                android:orientation="vertical"
                android:paddingStart="@dimen/dimen_15"
                android:paddingTop="@dimen/half_dimen"
                android:paddingBottom="@dimen/half_dimen"
                android:paddingEnd="@dimen/dimen_15"
                android:background="@drawable/circular_layout_profile"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/default_dimen"
                android:layout_height="wrap_content"
                >

                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="@dimen/half_dimen"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/default_dimen"
                        android:padding="3dp"
                        android:src="@drawable/deposit_history" />

                    <TextView
                        android:text="存款记录"
                        android:layout_width="match_parent"
                        android:textSize="@dimen/paragraph"
                        android:layout_gravity="center"
                        android:textAppearance="@style/TextAppearance.Regular"
                        android:layout_height="wrap_content"/>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/withdrawBTN"
                android:layout_marginStart="@dimen/dimen_20"
                android:elevation="3dp"
                android:layout_marginEnd="@dimen/dimen_20"
                android:orientation="vertical"
                android:paddingStart="@dimen/dimen_15"
                android:paddingTop="@dimen/half_dimen"
                android:paddingBottom="@dimen/half_dimen"
                android:paddingEnd="@dimen/dimen_15"
                android:background="@drawable/circular_layout_profile"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/default_dimen"
                android:layout_height="wrap_content"
                >

                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="@dimen/half_dimen"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:padding="3dp"
                        android:src="@drawable/withdrawal_history"
                        android:layout_width="wrap_content"
                        android:layout_marginEnd="@dimen/default_dimen"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="提款记录"
                        android:layout_width="match_parent"
                        android:textSize="@dimen/paragraph"
                        android:layout_gravity="center"
                        android:textAppearance="@style/TextAppearance.Regular"
                        android:layout_height="wrap_content"/>
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/transferBTN"
                android:layout_marginStart="@dimen/dimen_20"
                android:elevation="3dp"
                android:layout_marginEnd="@dimen/dimen_20"
                android:orientation="vertical"
                android:paddingStart="@dimen/dimen_15"
                android:paddingTop="@dimen/half_dimen"
                android:paddingBottom="@dimen/half_dimen"
                android:paddingEnd="@dimen/dimen_15"
                android:background="@drawable/circular_layout_profile"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/default_dimen"
                android:layout_height="wrap_content"
                >

                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="@dimen/half_dimen"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:padding="3dp"
                        android:src="@drawable/transfer_history"
                        android:layout_width="wrap_content"
                        android:layout_marginEnd="@dimen/default_dimen"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="转账记录"
                        android:layout_width="match_parent"
                        android:textSize="@dimen/paragraph"
                        android:layout_gravity="center"
                        android:textAppearance="@style/TextAppearance.Regular"
                        android:layout_height="wrap_content"/>
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/promoBTN"
                android:layout_marginStart="@dimen/dimen_20"
                android:elevation="3dp"
                android:layout_marginEnd="@dimen/dimen_20"
                android:orientation="vertical"
                android:paddingStart="@dimen/dimen_15"
                android:paddingTop="@dimen/half_dimen"
                android:paddingBottom="@dimen/half_dimen"
                android:paddingEnd="@dimen/dimen_15"
                android:background="@drawable/circular_layout_profile"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/default_dimen"
                android:layout_height="wrap_content"
                >

                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="@dimen/half_dimen"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:padding="3dp"
                        android:src="@drawable/promo_history"
                        android:layout_width="wrap_content"
                        android:layout_marginEnd="@dimen/default_dimen"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="优惠记录"
                        android:layout_width="match_parent"
                        android:textSize="@dimen/paragraph"
                        android:layout_gravity="center"
                        android:textAppearance="@style/TextAppearance.Regular"
                        android:layout_height="wrap_content"/>
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/rebateBTN"
                android:layout_marginStart="@dimen/dimen_20"
                android:elevation="3dp"
                android:layout_marginEnd="@dimen/dimen_20"
                android:orientation="vertical"
                android:paddingStart="@dimen/dimen_15"
                android:paddingTop="@dimen/half_dimen"
                android:paddingBottom="@dimen/half_dimen"
                android:paddingEnd="@dimen/dimen_15"
                android:background="@drawable/circular_layout_profile"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/default_dimen"
                android:layout_height="wrap_content"
                >

                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="@dimen/half_dimen"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:padding="3dp"
                        android:src="@drawable/rebate_history"
                        android:layout_width="wrap_content"
                        android:layout_marginEnd="@dimen/default_dimen"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="反水记录"
                        android:layout_width="match_parent"
                        android:textSize="@dimen/paragraph"
                        android:layout_gravity="center"
                        android:textAppearance="@style/TextAppearance.Regular"
                        android:layout_height="wrap_content"/>
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </ScrollView>



</LinearLayout>