<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/feedbackIV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/feedback_page"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/default_dimen"
            android:background="@drawable/circular_layout_white"
            android:layout_marginTop="@dimen/dimen_15"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="尊敬的会员,欢迎说出您对本公司的意见,建议甚至投诉。"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen_20"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公司经理将会亲自查收您的邮箱, 并在工作日的24小时候内回复您。"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen_20"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您的建议是我们前进的动力,我们会对有价值的信息给与奖励。"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen_20"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="经理邮箱:"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen_20"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="manager.kaisheng@gmail.com"
                android:textColor="@color/white"
                android:padding="@dimen/dimen_15"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen_20"
                android:background="@drawable/gradient_bg"/>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>