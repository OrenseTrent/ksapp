<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="您的专属推荐链接及二维码:"
            android:gravity="center_horizontal"
            android:layout_margin="@dimen/dimen_20"
            android:textColor="@color/black_txt"
            android:textSize="16sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/circular_layout_gold_profile"
            android:padding="@dimen/dimen_20"
            android:layout_margin="@dimen/dimen_20">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/referral_gift"
                />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="https://sad-visvesvaraya-279b39.netlify.app"
            android:gravity="center_horizontal"
            android:layout_margin="@dimen/dimen_20"
            android:textColor="@color/promo_txt"
            android:textSize="16sp"
            />

        <ImageView
            android:id="@+id/qrIV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="他人扫一扫二维码即可成为您的推荐好友"
            android:gravity="center_horizontal"
            android:textSize="16sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请使用浏览器扫描二维码(如UC,QQ等浏览器)"
            android:gravity="center_horizontal"
            android:textColor="@color/promo_txt"
            android:layout_marginTop="@dimen/default_dimen"
            android:textSize="16sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="好友注册记录"
            android:layout_marginTop="@dimen/dimen_20"
            android:layout_marginStart="@dimen/dimen_20"
            android:textSize="16sp"
            />

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:stretchColumns="0,1,2"
            android:layout_margin="@dimen/default_dimen"
            android:gravity="center">

            <TableRow
                android:background="#FFFFFF"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                >
                <TableRow
                    android:background="#000000"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    >

                </TableRow>
            </TableRow>
            <TableRow
                android:background="@color/white"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="好友账号"
                    android:layout_margin="1dp"
                    android:layout_column="0"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/white"
                    android:gravity="center"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="注册时间"
                    android:layout_margin="1dp"
                    android:layout_column="1"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/white"
                    android:gravity="center"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="操作"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/white"
                    android:layout_column="2"
                    />
            </TableRow>

            <TableRow
                android:background="@color/white"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Text"
                    android:layout_margin="1dp"
                    android:layout_column="0"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Text"
                    android:layout_margin="1dp"
                    android:layout_column="1"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Text"
                    android:layout_margin="1dp"
                    android:layout_column="2"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    />


            </TableRow>



        </TableLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="好友推荐彩金申请记录"
            android:layout_marginTop="@dimen/dimen_20"
            android:layout_marginStart="@dimen/dimen_20"
            android:textSize="16sp"
            />

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:stretchColumns="0,1,2,3,4"
            android:layout_margin="@dimen/default_dimen"
            android:gravity="center">

            <TableRow
                android:background="#FFFFFF"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                >
                <TableRow
                    android:background="#000000"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    >

                </TableRow>
            </TableRow>
            <TableRow
                android:background="@color/white"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="彩金"
                    android:layout_margin="1dp"
                    android:layout_column="0"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/white"
                    android:gravity="center"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="好友账号"
                    android:layout_margin="1dp"
                    android:layout_column="1"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/white"
                    android:gravity="center"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="申请状态"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/white"
                    android:layout_column="2"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="申请时间"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/white"
                    android:layout_column="3"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="备注"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/white"
                    android:layout_column="4"
                    />

            </TableRow>

            <TableRow
                android:background="@color/white"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Text"
                    android:layout_margin="1dp"
                    android:layout_column="0"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Text"
                    android:layout_margin="1dp"
                    android:layout_column="1"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Text"
                    android:layout_margin="1dp"
                    android:layout_column="2"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Text"
                    android:layout_margin="1dp"
                    android:layout_column="3"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Text"
                    android:layout_margin="1dp"
                    android:layout_column="4"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    />



            </TableRow>



        </TableLayout>



    </LinearLayout>
    </ScrollView>

</LinearLayout>