<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/adapterCON"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/default_dimen"
    android:layout_margin="@dimen/default_dimen"
    android:background="@color/white">

    <TextView
        android:id="@+id/titleTXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="asdfasdfa"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@drawable/circular_layout_gold_profile"
        android:text="已读"
        android:textSize="14sp"
        android:paddingStart="@dimen/default_dimen"
        android:paddingEnd="@dimen/default_dimen"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/timeTXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleTXT"
        android:textSize="14sp"
        android:text="asdfasdfa"
        />



    <TextView
        android:id="@+id/contentTXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/timeTXT"
        android:textSize="14sp"
        android:layout_marginTop="@dimen/dimen_20"
        android:text="asdfasdfa"
        android:visibility="gone"
        />


</RelativeLayout>