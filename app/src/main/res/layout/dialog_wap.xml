<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    >

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_dimen"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/circular_layout"
            android:layout_centerInParent="true"
            android:backgroundTint="@color/white"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/default_dimen">


                <ImageView
                    android:id="@+id/closeBTN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="@dimen/half_dimen"
                    android:src="@drawable/close" />


            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="请选择打开方式"
                android:textSize="20sp"
                android:layout_margin="@dimen/default_dimen"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_20"
                android:padding="@dimen/dimen_15"
                >

                <TextView
                    android:id="@+id/proceedBTN"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="WAP"
                    android:padding="@dimen/default_dimen"
                    android:layout_margin="@dimen/default_dimen"
                    android:layout_marginEnd="@dimen/default_dimen"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:background="@drawable/circular_layout_gold_profile"
                    android:textSize="16sp"
                    />


            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>
    </ScrollView>


</LinearLayout>