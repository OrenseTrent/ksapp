<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/announceIV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/app_logo"
            android:layout_marginTop="@dimen/default_dimen"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20"
            >

                <TextView
                    android:id="@+id/mainTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="凯盛国际"
                    android:layout_gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:layout_centerHorizontal="true"
                    />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"
                    android:layout_toStartOf="@id/mainTV"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dimen_30"
                    android:layout_marginEnd="@dimen/dimen_30"
                    />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"
                android:layout_toEndOf="@id/mainTV"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dimen_30"
                android:layout_marginEnd="@dimen/dimen_30"
                />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/default_dimen"
            android:background="@drawable/circular_layout_about"
            android:layout_marginTop="@dimen/dimen_15"
            >

            <com.cloversoft.ks.vendor.android.widget.WrapContentWebView
                android:id="@+id/aboutUsTXT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen_20"
                />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20"
            >

            <TextView
                android:id="@+id/secTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="权威赞助伙伴"
                android:layout_gravity="center"
                android:textColor="@color/black_txt"
                android:layout_centerHorizontal="true"
                />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/black_txt"
                android:layout_toStartOf="@id/secTV"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dimen_30"
                android:layout_marginEnd="@dimen/dimen_30"
                />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/black_txt"
                android:layout_toEndOf="@id/secTV"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dimen_30"
                android:layout_marginEnd="@dimen/dimen_30"
                />


        </RelativeLayout>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/riverplate"
            android:layout_marginTop="@dimen/default_dimen"
            android:layout_gravity="center"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="阿根廷职业足球联赛"
            android:layout_gravity="center"
            android:textColor="@color/black_txt"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20"
            >

            <TextView
                android:id="@+id/thiTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正规牌照信息"
                android:layout_gravity="center"
                android:textColor="@color/black_txt"
                android:layout_centerHorizontal="true"
                />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/black_txt"
                android:layout_toStartOf="@id/thiTV"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dimen_30"
                android:layout_marginEnd="@dimen/dimen_30"
                />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/black_txt"
                android:layout_toEndOf="@id/thiTV"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dimen_30"
                android:layout_marginEnd="@dimen/dimen_30"
                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/gamblingIV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_20"
                >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:src="@drawable/gambling"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/dimen_30"
                android:layout_marginEnd="@dimen/dimen_30"
                android:layout_marginTop="@dimen/dimen_20"
                />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:src="@drawable/malta"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/dimen_30"
                    android:layout_marginEnd="@dimen/dimen_30"
                    android:layout_marginTop="@dimen/dimen_20"
                    />



            </LinearLayout>

            <LinearLayout
                android:id="@+id/gambLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/gamblingIV"
                android:layout_marginTop="@dimen/dimen_20"
                android:layout_marginStart="@dimen/dimen_20"
                android:layout_marginEnd="@dimen/dimen_20"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="英国GC"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:layout_marginStart="@dimen/dimen_30"
                    android:layout_marginEnd="@dimen/dimen_30"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="马耳他博彩牌照"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:layout_marginStart="@dimen/dimen_30"
                    android:layout_marginEnd="@dimen/dimen_30"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/gamb1LL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/gambLL"
                android:layout_marginStart="@dimen/dimen_20"
                android:layout_marginEnd="@dimen/dimen_20"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="监督委员会"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:layout_marginStart="@dimen/dimen_30"
                    android:layout_marginEnd="@dimen/dimen_30"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="(MGA)认证"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:layout_marginStart="@dimen/dimen_30"
                    android:layout_marginEnd="@dimen/dimen_30"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pagcor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_20"
                android:layout_below="@id/gamb1LL"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:src="@drawable/pagcor"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/dimen_30"
                    android:layout_marginEnd="@dimen/dimen_30"
                    android:layout_marginTop="@dimen/dimen_20"
                    />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:src="@drawable/gc"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/dimen_30"
                    android:layout_marginEnd="@dimen/dimen_30"
                    android:layout_marginTop="@dimen/dimen_20"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/pagcorLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/pagcor"
                android:layout_marginStart="@dimen/dimen_20"
                android:layout_marginEnd="@dimen/dimen_20"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="菲律宾(PAGCOR)"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:layout_marginStart="@dimen/dimen_30"
                    android:layout_marginEnd="@dimen/dimen_30"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="库拉索(GC)"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:layout_marginStart="@dimen/dimen_30"
                    android:layout_marginEnd="@dimen/dimen_30"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pagcor1LL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/pagcorLL"
                android:layout_marginStart="@dimen/dimen_20"
                android:layout_marginEnd="@dimen/dimen_20"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="监管博彩执照"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:layout_marginStart="@dimen/dimen_30"
                    android:layout_marginEnd="@dimen/dimen_30"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="网络博彩协会"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:layout_marginStart="@dimen/dimen_30"
                    android:layout_marginEnd="@dimen/dimen_30"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="凯盛国际拥有欧洲马耳他博彩管理局（MGA）、英国GC监督委员会（Gambling Commission）和菲律宾政府博彩委员会（Pagcor）颁发的合法执照。荷属安的 列斯群岛博彩执照，是受国际博彩协会认可的合法博彩公司，进行注册并娱 乐前，请确保您年满18周岁！"
               android:layout_below="@id/pagcor1LL"
                android:layout_margin="@dimen/dimen_20"
                />


        </RelativeLayout>

    </LinearLayout>
    </ScrollView>

</RelativeLayout>